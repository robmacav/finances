<div class="col-lg-7">
    <div class="mb-2 d-flex justify-content-between align-items-center">
        <div class="section-title">Novidades e Atualizações</div>
        <a href="#" class="link-muted">Ver tudo</a>
    </div>
    <div class="row g-3">
        <% @leis.each do |lei| %>
        <div class="col-12 col-md-6 d-flex">
            <div class="card h-100 w-100">
                <div class="card-body d-flex flex-column">
                    <div>
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="pill"><i class="fa-solid fa-rotate me-1"></i> Atualizado</span>
                            <span class="badge text-bg-light text-dark border"><%= lei.publicacao.year %></span>
                        </div>
                        <a class="stretched-link text-decoration-none fw-semibold" href="#"><%= lei.identificador %></a>
                        <p class="text-secondary mb-3"><%= lei.titulo %></p>
                    </div>
                    <div class="mt-auto d-flex gap-2">
                        <a class="btn btn-outline-dark btn-sm" href="#">
                            <i class="fa-regular fa-file-lines me-1"></i></i>Detalhes
                        </a>
                        <a class="btn btn-outline-primary btn-sm" href="#">
                            Baixar
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>